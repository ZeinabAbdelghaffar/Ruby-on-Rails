<%= form_with model: @article, html: { class: "article-form", multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %><br>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status %><br>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: @article.status || 'public' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %><br>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="button-group">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back to Index", articles_path, class: "btn btn-secondary" %>
  </div>
<% end %>
